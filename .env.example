# ===========================================
# 环境变量配置示例
# 复制此文件为 .env 并填入实际值
# ===========================================

# ===========================================
# 数据库配置
# ===========================================

# 数据库连接 URL
# SQLite (开发环境)
# DATABASE_URL="file:./dev.db"

# PostgreSQL (生产环境)
# DATABASE_URL="postgresql://user:password@localhost:5432/blog_resume?schema=public"

# Vercel Postgres (Vercel 部署)
# 启用 Vercel Postgres 模式
VERCEL_POSTGRES_ENABLED="false"

# Vercel Postgres 连接地址（由 Vercel 提供）
# DATABASE_URL="postgres://default:xxxxx@xxxxx.postgres.vercel-storage.com/verceldb?pgbouncer=true&connect_timeout=15"
# DIRECT_DATABASE_URL="postgres://default:xxxxx@xxxxx.postgres.vercel-storage.com/verceldb?connect_timeout=15"

# 直连数据库 URL（用于迁移，不使用连接池）
DIRECT_DATABASE_URL=""

# ===========================================
# 默认管理员账号配置（可选）
# 首次部署时，登录页面会引导创建管理员账号
# 这些值将作为表单默认值
# ===========================================

DEFAULT_ADMIN_EMAIL=""
DEFAULT_ADMIN_PASSWORD=""
DEFAULT_ADMIN_NAME=""

# ===========================================
# JWT 配置
# ===========================================
# 生产环境请使用强随机字符串（至少 32 字符）
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# 应用配置
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="SysLog"

# 可选：分析工具
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# ===========================================
# 微信支付配置（可选）
# 如需启用微信支付，请填写以下配置
# ===========================================

# 微信公众号AppID
# WECHAT_PAY_APP_ID="wx1234567890abcdef"

# 微信商户号
# WECHAT_PAY_MCH_ID="1234567890"

# 微信支付API密钥（V2版本，在商户平台设置）
# WECHAT_PAY_API_KEY="your-32-character-api-key-here"

# 微信支付API V3密钥（可选，用于V3接口）
# WECHAT_PAY_API_V3_KEY="your-32-character-api-v3-key"

# 微信支付证书序列号（可选，用于V3接口）
# WECHAT_PAY_SERIAL_NO="证书序列号"

# 微信支付商户私钥（可选，用于V3接口签名）
# WECHAT_PAY_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# 微信支付回调通知地址
# 注意：必须是外网可访问的HTTPS地址
# WECHAT_PAY_NOTIFY_URL="https://your-domain.com/api/shop/wechat-pay/notify"

# ===========================================
# 支付测试模式配置（开发环境）
# 启用后可模拟支付流程，无需真实微信支付配置
# ===========================================

# 启用支付测试模式（设为 true 开启）
# 开启后，支付接口将返回模拟的支付二维码和支付成功状态
PAYMENT_TEST_MODE="true"

# 测试模式下模拟支付自动成功的时间（毫秒）
# 默认 5000ms（5秒），设为 0 则需要手动确认
PAYMENT_TEST_AUTO_SUCCESS_MS="5000"

# 测试模式下显示的模拟支付二维码URL（可选）
# 不设置则显示默认的测试二维码
# PAYMENT_TEST_QR_CODE_URL="weixin://wxpay/bizpayurl?pr=test"

# ===========================================
# 服务器域名配置
# 用于生成支付回调地址等
# ===========================================

# 服务器域名（生产环境请修改为实际域名）
# 支付回调地址将基于此域名生成
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# ===========================================
# 虎皮椒支付配置（第三方聚合支付平台）
# 个人开发者友好，无需商户资质
# 支持微信支付和支付宝
# ===========================================

# 虎皮椒 AppID
# XUNHUPAY_APPID="your-appid-here"

# 虎皮椒 AppSecret（密钥）
# XUNHUPAY_APPSECRET="your-appsecret-here"

# 虎皮椒异步通知地址（可选，系统会自动基于 SITE_URL 生成）
# XUNHUPAY_NOTIFY_URL="https://your-domain.com/api/shop/xunhupay/notify"
